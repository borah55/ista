{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.php",
      "use": "@vercel/php"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/api/index.php"
    }
  ],
  "env": {
    "SUPABASE_URL": "@supabase_url",
    "SUPABASE_KEY": "@supabase_key",
    "BOT_TOKEN": "@bot_token",
    "WEBHOOK_URL": "@webhook_url"
  },
  "functions": {
    "api/bot.php": {
      "runtime": "php@8.1"
    }
  }
}
